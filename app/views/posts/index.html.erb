<p id="notice"><%= notice %></p>

  <% @posts.each do |post| %>
    <div class="col s12 m6 l4">
      <div class="card small hoverable">
        <div class="card-content">
          <span class="card-title activator grey-text text-darken-4 truncate">Un post<i class="material-icons right">more_vert</i></span>
          <p><%= post.date %></p>
          <p><%= post.description %></p>
        </div>
        <div class="card-action center">
          <a href="#" id="download-button" class="btn waves-effect waves-light orange">Je crois que c'est moi</a>
        </div>
        <div class="card-reveal">
          <span class="card-title grey-text text-darken-4"><%= post.date %><i class="material-icons right">close</i></span>
          <p><%= post.description %></p>
        </div>
      </div>
    </div>
  <% end %>

<%= link_to 'New Post', new_post_path %>
