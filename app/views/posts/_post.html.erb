<p id="notice"><%= notice %></p>
<% name = ""%>
<div class="row">
  <% @posts.each do |post| %>
    <div class="col s12 m6 l4">
      <div class="card large">
        <div class="card-image waves-effect waves-block waves-light">
          <%= image_tag(post.image.url(:blur), :alt => "", class: 'activator') %>
          <span class="card-title activator truncate col s12", style="background-color:rgba(0, 0, 0, 0.2);"><%= post.title %></span>
        </div>
        <div class="card-content waves-effect waves-block waves-light">
          <p class="activator"> <i><%= post.date %></i> <br/> <%= post.description %></p>
        </div>

        <div class="card-action center">
          <a href="#!" id="download-button<%= post.id %>" class="waves-effect waves-light btn teal">Je crois que c'est moi</a>
        </div>
        <script>
          document.getElementById("download-button<%= post.id %>").addEventListener("click", function() {
          <% if user_signed_in? %>
            theFunction("<%= post.name %>", "<%= post.firstname %>", "<%= current_user.name %>","<%= current_user.firstname %>");
          <% else %>
            window.location.href = "<%= new_user_session_path %>";
          <%end%>
          }, false);
        </script>     
        <div class="card-reveal">
          <span class="card-title teal-text"><%= post.title %><i class="material-icons grey-text text-darken-4 right">close</i></span>
          <p><%= post.description %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<div id="modalToi" class="modal">
    <div class="modal-content">
      <h4>Woooooo</h4>
      <p>T'as un ticket!!</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
 </div>
 
 <div id="modalPasToi" class="modal">
    <div class="modal-content">
      <h4>Bien essayé!</h4>
      <p>Désolé ce n'est pas toi...</p>
    </div>
    <div class="modal-footer">
      <a href="#!" class=" modal-action modal-close waves-effect waves-green btn-flat">Agree</a>
    </div>
 </div>

 <script>
    function theFunction ($name, $firstname, $user_name, $user_firstname) {
      if ($name == $user_name && $firstname == $user_firstname) {
        $('#modalToi').openModal();
      }
      else{
        $('#modalPasToi').openModal();
      }
    }
</script>