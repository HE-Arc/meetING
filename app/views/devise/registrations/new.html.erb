<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div><%= devise_error_messages! %></div>
  
  <div class="card-panel">
    <h5>INSCRIPTION</h5>
  </div>
  
  <div class="card-panel"> 
    
    <div class="row">          
      <div class="input-field col s6">
        <i class="material-icons prefix">account_circle</i>
         <%= f.label :name, "Nom" %>
         <%= f.text_field :name, autofocus: true %>
      </div>
      
      <div class="input-field col s6">
         <%= f.label :firstname, "PrÃ©nom" %>
         <%= f.text_field :firstname %>
      </div>
    </div>
    
    <div class="row">  
      <div class="col s6">
        <%= f.radio_button :gender, :man, :checked => true %>
        <%= f.label :gender_man, "Je suis un homme" %>

        <%= f.radio_button :gender, :woman %>
        <%= f.label :gender_woman, "Je suis une femme" %>
      </div>
    </div>
  </div>
  <div class="card-panel">
    <div class="row">          
      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <%= f.label :email, "Email" %>
        <%= f.email_field :email %>
      </div>
    </div>
  
    <div class="row">  
      <div class="input-field col s6">
      <i class="material-icons prefix">vpn_key</i>
        <%= f.label :password, "Mot de passe" %>
        <%= f.password_field :password, autocomplete: "off" %>
      </div>
      
      <div class="input-field col s6">
        <%= f.label :password_confirmation, "Confirmer le mot de passe" %>
        <%= f.password_field :password_confirmation, autocomplete: "off" %>
      </div>
    </div>

  </div>
  
  <div class="actions">
    <%= f.submit 'Sign up', :class => 'btn waves-effect waves-light light-blue lighten-1' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
